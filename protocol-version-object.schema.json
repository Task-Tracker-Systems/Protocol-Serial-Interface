{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "protocol version",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?$",
      "description": "Semantic Versioning (SemVer) string"
    }
  },
  "required": ["version"]
}

